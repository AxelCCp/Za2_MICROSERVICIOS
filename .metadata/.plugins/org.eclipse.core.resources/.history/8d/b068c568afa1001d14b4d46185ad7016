resilience4j:
  circuitbreaker:
    configs:
      defecto:
        sliding-window-size: 6
        failure-rate-threshold: 50
        wait-duration-in-open-state: 20s
        permitted-number-of-calls-in-half-open-state: 4
        slow-call-rate-threshold: 50
        slow-call-duration-threshold: 2s
    instances:
      products:
        base-config: defecto
  timelimiter:
    configs:
      defecto:
        timeout-duration: 6s
    instances:
      products:
        base-config: defecto

spring:
  cloud:
    gateway:
      routes:
      - id: ms-products-server
        uri: lb://ms-products-server
        predicates:
        - Path=/g/prod/**
        filters:
        - name: CircuitBreaker
            args:
              name: products
              statusCodes: 500
        - StripPrefix=2
        - name: Ex1
          args:
            message: Hi! It's a message from the Gateway Filter Factory if you call to ms-products-server from Spring Cloud Gateway... localhost:8091/g/prod ... Bye!'
            cookieName: user
            cookieValue: Axel
      - id: ms-item-server
        uri: lb://ms-item-server
        predicates:
        - Path=/g/item/**
        filters:
        - StripPrefix=2
        - name: Ex1
          args:
            message: Hi! It's a message from the Gateway Filter Factory if you call to ms-item-server from Spring Cloud Gateway... localhost:8091/g/item ... Bye!'
            cookieName: user
            cookieValue: Axel
        