spring:
  cloud:
    gateway:
      routes:
      - id: ms-products-server
        uri: lb://ms-products-server
        predicates:
        - Path=/g/prod/**
        filters:
        - StripPrefix=2
        - name: Ejemplo
          args:
            mensaje: HOLA mi mensaje personalizado
            cookieNombre: user
            cookieValor: Axel
      - id: ms-item-server
        uri: lb://ms-item-server
        predicates:
        - Path=/g/items/**
        filters:
        - StripPrefix=2
        - AddRequestHeader=token-request, 123456
        - AddResponseHeader=token-response, 12345678
        - SetResponseHeader=Content-Type, text/plain
        - AddRequestParameter=nombre,axel