spring:
  cloud:
    gateway:
      routes:
      - id: ms-products-server
        uri: lb://ms-products-server
        predicates:
        - Path=/g/prod/**
        filters:
        - StripPrefix=2
        - name: Example
          args:
            message: Hi! It's a message from the Gateway Filter Factory if you call to ms-products-server from Spring Cloud Gateway... Bye!'
            cookieName: user
            cookieValue: Axel
      - id: ms-item-server
        uri: lb://ms-item-server
        predicates:
        - Path=/g/items/**
        filters:
        - StripPrefix=2
        